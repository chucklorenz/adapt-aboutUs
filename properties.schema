{
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required":false,
  "properties":{
    "pluginLocations": {
      "type":"object",
      "required":true,
      "properties":{
        "config": {
          "type":"object"
        },
        "course": {
          "type":"object",
          "properties":{
            "_aboutUs": {
              "legend": "About Us",
              "type":"object",
              "required":false,
              "properties":{
                "_socialLinks": {
                  "type":"array",
                  "required":false,
                  "title":"Social links",
                  "items": {
                    "type":"object",
                    "required":true,
                    "properties":{
                      "_link": {
                        "type":"string",
                        "required":false,
                        "default": "",
                        "title":"URL to your account",
                        "inputType": "Text",
                        "validators": []
                      },
                      "_service": {
                        "type":"string",
                        "required":false,
                        "default": "",
                        "title":"Name of social networking service",
                        "inputType": {"type": "Select", "options": ["Twitter", "Facebook", "LinkedIn", "GooglePlus", "YouTube", "Pinterest", "Instagram", "Vimeo", "flickr", "Picasa", "Lanyrd", "DeviantArt", "Steam", "Blogger", "Tumblr", "SoundCloud", "XING", "Feed"]}
                      }
                    }
                  }
                },
                "_aboutUsItems": {
                  "type":"array",
                  "required":false,
                  "title":"Text items",
                  "items": {
                    "type":"object",
                    "required":true,
                    "properties":{
                      "description": {
                        "type":"string",
                        "required":false,
                        "default": "",
                        "title":"Item description",
                        "inputType": "Text",
                        "validators": []
                      },
                      "title": {
                        "type":"string",
                        "required":false,
                        "default": "",
                        "title":"Item title",
                        "inputType": "Text",
                        "validators": []
                      }
                    }
                  }
                },
                "_graphic": {
                  "type":"object",
                  "required":false,
                  "title": "Optional graphic",
                  "properties":{
                    "alt": {
                      "type":"string",
                      "required":false,
                      "default": "",
                      "title": "Alt text",
                      "inputType": "Text",
                      "validators": [],
                      "help": "Text for the alt attribute of this image"
                    },
                    "src": {
                      "type":"string",
                      "required":false,
                      "default": "",
                      "inputType": "Asset:image",
                      "validators": []
                    }
                  }
                },
                "headline": {
                  "type":"string",
                  "required":false,
                  "default": "",
                  "title":"Organization name or headline",
                  "inputType": "Text",
                  "validators": []
                },
                "description": {
                  "type":"string",
                  "required":true,
                  "title":"Drawer description",
                  "inputType": "Text"
                },
                "title": {
                  "type":"string",
                  "required":true,
                  "title":"Drawer title",
                  "default": "About Us",
                  "inputType": "Text"
                }
              }
            }
          }
        },
        "contentobject": {
          "type":"object"
        },
        "article": {
          "type":"object"
        },
        "block": {
          "type":"object"
        },
        "component": {
          "type":"object"
        }
      }
    }
  }
}